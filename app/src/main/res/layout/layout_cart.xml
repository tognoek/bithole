<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_vong"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/shop"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E881C675"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                app:cardCornerRadius="70dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logoShop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/atino_lht" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tenShop"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ATINO"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_vong"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/hinhanhSanPham"
                android:layout_width="100dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tenSanPham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Quần Short Name trơn TRNUTA " />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/donGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="165.000đ"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/soLuong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Số lượng: 1"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_xoa"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/cart_remove"
                android:clickable="true"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>