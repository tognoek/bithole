<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_vong"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/chitiet_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="10dp">

        <ImageView
            android:paddingTop="10dp"
            android:id="@+id/hinhanh"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            tools:src="@drawable/anhmau" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center|top"
                android:id="@+id/tensp"
                android:layout_height="50dp"
                style="@style/option"
                android:maxLines="2"
                android:textSize="15dp"
                android:text="Quần áo được nhập kẩu từ Trung Quốc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/dongia"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:text="200.000 Đ"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/soluong"
                    android:text="Số lượng: 219"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Ngày mua:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/date"
                android:text=" 12 - 2 - 2003"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>