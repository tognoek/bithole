<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/background_vong">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:src="@drawable/hvt_hehe"
        android:id="@+id/hinhanh"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical" />
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tieude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" HTS đã bình luận vào bai viết của bạn"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ngayBL"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/06/2003"
            android:textSize="15dp"
            android:textStyle="italic"/>
    </LinearLayout>
</LinearLayout>